generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum AppointmentStatus {
  PENDING
  CONFIRMED
  CANCELLED
  COMPLETED
}

model Doctor {
  id           String        @id @default(uuid())
  name         String
  email        String        @unique
  password     String
  phone        String
  created_at   DateTime      @default(now())
  updated_at   DateTime      @updatedAt
  appointments Appointment[]

  @@map("doctors")
}

model Student {
  id            String         @id @default(uuid())
  name          String
  email         String         @unique
  password      String
  phone         String
  created_at    DateTime       @default(now())
  updated_at    DateTime       @updatedAt
  forumPosts    ForumPost[]
  forumComments ForumComment[]
  appointments  Appointment[]

  @@map("students")
}

model Appointment {
  id         String            @id @default(uuid())
  student_id String
  doctor_id  String
  fullName   String
  phone      String
  date       DateTime
  time       String
  service    String
  role       String
  status     AppointmentStatus @default(PENDING)
  createdAt  DateTime          @default(now())
  updated_at DateTime          @updatedAt

  student Student @relation(fields: [student_id], references: [id], onDelete: Cascade)
  doctor  Doctor  @relation(fields: [doctor_id], references: [id], onDelete: Cascade)

  @@map("appointments")
}

model Admin {
  id         String   @id @default(uuid())
  name       String
  email      String   @unique
  password   String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@map("admins")
}

model ForumPost {
  id         String         @id @default(uuid())
  author_id  String
  title      String
  content    String
  created_at DateTime       @default(now())
  updated_at DateTime       @updatedAt
  author     Student        @relation(fields: [author_id], references: [id])
  comments   ForumComment[]

  @@map("forum_posts")
}

model ForumComment {
  id         String    @id @default(uuid())
  author_id  String
  post_id    String
  content    String
  created_at DateTime  @default(now())
  post       ForumPost @relation(fields: [post_id], references: [id])
  author     Student   @relation(fields: [author_id], references: [id], onDelete: Cascade)

  @@map("forum_comments")
}

model Artikel {
  id           String   @id @default(cuid())
  judul        String
  konten       String   @db.Text
  excerpt      String?  @db.VarChar(255)
  gambar_url   String?
  kategori     String
  tags         Json
  penulis      String
  penulis_role String
  is_published Boolean  @default(true)
  created_by   String
  updated_by   String?
  created_at   DateTime @default(now())
  updated_at   DateTime @updatedAt

  @@map("artikel")
}

model ChatRoom {
  id         String        @id @default(uuid())
  student_id String // hanya ID biasa, tanpa foreign key
  messages   ChatMessage[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("chat_rooms")
}

model ChatMessage {
  id      String   @id @default(uuid())
  room_id String
  room    ChatRoom @relation(fields: [room_id], references: [id], onDelete: Cascade)

  sender_id   String
  sender_role String // student / doctor
  message     String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("chat_messages")
}
